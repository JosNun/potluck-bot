{
  "name": "potluck-bot",
  "version": "1.0.0",
  "description": "A Discord bot for organizing potluck events with interactive item management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development tsx --env-file=.env src/index.ts",
    "start": "NODE_ENV=production node --env-file=.env dist/index.js",
    "deploy": "NODE_ENV=development tsx --env-file=.env src/deploy-commands.ts",
    "deploy:prod": "NODE_ENV=production node --env-file=.env dist/deploy-commands.js",
    "lint": "oxlint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chrono-node": "^2.8.4",
    "discord.js": "^14.22.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "oxlint": "^1.14.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
